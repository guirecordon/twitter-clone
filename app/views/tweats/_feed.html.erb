<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
          <%= render 'tweats/form' %>
      </div>
    </article>
    <% end %>

<% @tweats.each do |tweat| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(tweat.user.email, size: 64, alt: tweat.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= tweat.user.name %></strong><br />
          <small><%= tweat.user.username %></small><br />
          <p> <%= tweat.tweat %></p>
        </div>
      </div>
      <% if user_signed_in? %>
      <nav class="level">
        <div class="level-left is-mobile">
          <%= link_to tweat, class: "level-item" do %>
            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to edit_tweat_path(tweat), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to tweat, method: :delete, data: { confirm: "Are you sure you want to delete this tweat?"} do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>  
          <% end %>
        </div>
      </nav>
      <% end %>
    </article>
  </div>
<% end %>
</div>